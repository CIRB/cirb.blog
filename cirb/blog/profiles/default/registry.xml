<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
i18n:domain="plone">

    <records interface="collective.wpadmin.settings.WPAdminSettings">
        <value key="blog_type">Blog Entry</value>
    </records>
    <records interface="plone.app.discussion.interfaces.IDiscussionSettings">
        <value key="globally_enabled">True</value>
        <value key="anonymous_comments">True</value>
        <value key="moderation_enabled">True</value>
        <value key="captcha">recaptcha</value>
        <value key="show_commenter_image">True</value>
        <value key="moderator_notification_enabled">False</value>
        <value key="moderator_email"></value>
        <value key="user_notification_enabled">False</value>
    </records>
    <records interface="plone.app.discussion.interfaces.IDiscussionSettings">
        <value key="anonymous_email_enabled">True</value>
    </records>
    <records interface="collective.wpadmin.settings.WPAdminSettings">
        <value key="blog_type">Blog Entry</value>
    </records>
    <records interface="plone.app.querystring.interfaces.IQueryField"
        prefix="plone.app.querystring.field.Language">
        <value key="title" i18n:translate="">Language</value>
        <value key="description" i18n:translate="">The language of the content of an item</value>
        <value key="enabled">True</value>
        <value key="sortable">True</value>
        <value key="operations">
            <element>plone.app.querystring.operation.selection.is</element>
        </value>
        <value key="vocabulary">plone.app.vocabularies.SupportedContentLanguages</value>
        <value key="group" i18n:translate="">Metadata</value>
    </records>

</registry>
